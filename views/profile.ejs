<%- include('partials/header') -%>
  <% if (user.picture) { %>
    <img class="block py-3 ml-4" src="<%= user.picture %>" width="45" height="45">
  <% } %>
  <h1 class="text-2xl mb-4 ml-4 text-gray-400">Welcome <%= user.nickname %></h1>

<!-- Add this code within the body of your profile.ejs file -->
<div id="success-notification" class="modal fade">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Success!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Welcome Back, <%= user.nickname %>!</p>
      </div>
    </div>
  </div>
</div>

<%- popupScript %> <!-- Include the popupScript variable here to execute the JavaScript code -->


  <pre class="block  p-4 text-sm overflow-scroll text-gray-400"><%= userProfile %></pre>

